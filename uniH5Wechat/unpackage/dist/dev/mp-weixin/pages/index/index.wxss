.m-content {
  display: flex;
  flex-direction: column;
  position: relative;
}
.m-content .body-box {
  margin-top: -70rpx;
  padding-top: 40rpx;
  border-top-left-radius: 80rpx;
  border-top-right-radius: 80rpx;
  background-color: white;
}
.m-content .bg-color {
  background-image: linear-gradient(to right, #f5bf4b, #f7d758);
}
.m-content .uni-searchbar {
  width: 65%;
}
.m-content .status_bar {
  height: var(--status-bar-height);
  width: 100%;
}
.m-content .search-box {
  width: 100%;
  background-image: linear-gradient(to right, #f5bf4b, #f7d758);
  padding-bottom: 80rpx;
}
.m-content .search-width {
  width: 70%;
}
.m-content .uni-searchbar__box {
  justify-content: start;
}
.logo {
  height: 200rpx;
  width: 200rpx;
  margin-top: 200rpx;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 50rpx;
}
.swiper-box {
  height: 240rpx;
  padding: 26rpx;
}
.swiper-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 240rpx;
  color: #fff;
}
.swiper-item .swiper-banner {
  width: 100%;
}
.swiper-item0 {
  background-color: #cee1fd;
}
.swiper-item1 {
  background-color: #b2cef7;
}
.swiper-item2 {
  background-color: #cee1fd;
}
.image {
  width: 750rpx;
  border-radius: 20rpx;
}